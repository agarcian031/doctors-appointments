<h1>DPL Clinic's Patients</h1>
<p>Number of Patients: <%= @patients.count%><p>
<%= link_to 'New Patient', new_patient_path, class: "btn"%>
<hr />
<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= link_to patient.full_name, patient, class: "btn" %>| 
      <%= link_to "Edit Patient", edit_patient_path(patient), class: "btn" %>| 
      <%= link_to 'Remove', {:controller => :patients, :action => 'destroy', :id => patient.id }, :method => :delete, class:"btn" %>
    </li>
    <br>
<% end %>
</ul>
<br>