<h1>DPL Clinic's Doctors</h1>
<p>Number of Doctors: <%= @doctors.count%><p>
<%= link_to 'Add a Doctor', new_doctor_path, class: "btn"%>
<hr />
<ul>
  <% @doctors.each do |doctor| %>
    <li>
      <%= link_to doctor.full_name, doctor_path(doctor), class: "btn" %>| 
      <%= link_to "Edit Doctor", edit_doctor_path(doctor), class: "btn" %>| 
      <%= link_to 'Remove', {:controller => :doctors, :action => 'destroy', :id => doctor.id }, :method => :delete, class:"btn" %>
    </li>
<% end %>
</ul>

